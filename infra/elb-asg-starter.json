{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Sample CFT Template",
  "Resources": {
    "MyElbSg": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Ferzan SG",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/32",
            "FromPort": 80,
            "IpProtocol": "tcp",
            "ToPort": 80
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "FerzanSG"
          }
        ],
        "VpcId": "vpc-4e81b92a"
      }
    },
    "MyElb": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "CrossZone": true,
        "LoadBalancerName": "FerzanTrainingLb",
        "Listeners": [
          {
            "InstancePort": "8080",
            "InstanceProtocol": "tcp",
            "LoadBalancerPort": "80",
            "Protocol": "tcp"
          }
        ],
        "Instances": [
          {
            "Ref": "MyEc2"
          }
        ],
        "SecurityGroups": [
          {
            "Ref": "MyElbSg"
          }
        ],
        "Subnets": [
          "subnet-3c0bbc16",
          "subnet-71532c4c"
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "FerzanTrainingLb"
          }
        ]
      }
    },
    "MyEc2Sg": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Ferzan Ec2 SG",
        "SecurityGroupIngress": {
          "SourceSecurityGroupId": {
            "Ref": "MyElbSg"
          },
          "FromPort": "8080",
          "ToPort": "8080",
          "IpProtocol": "tcp"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "FerzanSG"
          }
        ],
        "VpcId": "vpc-4e81b92a"
      }
    },
    "MyEc2": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-c481fad3",
        "InstanceType": "t2.micro",
        "KeyName": "sterling-training",
        "SecurityGroupIds": [
          {
            "Ref": "MyEc2Sg"
          }
        ],
        "SubnetId": "subnet-3f67d715",
        "Tags": [
          {
            "Key": "Name",
            "Value": "FerzanTrainingEc2"
          }
        ]
      }
    }
  }
}